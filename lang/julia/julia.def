BootStrap: docker
From: ubuntu:16.04
%runscript
    echo 'println("hello world")' | julia
%environment
    export PATH=/julia-1.0.1/bin:$PATH
    export LD_LIBRARY_PATH=/julia-1.0.1/lib:$LD_LIBRARY_PATH
    export LC_ALL=C
%post
    apt-get -y update
    apt-get -y install vim
    apt-get -y install curl hostname 
    apt-get -y install tar
    apt-get -y install gzip
    apt-get -y install bc
    apt-get -y install less
    apt-get -y install util-linux
    apt-get -y install strace
    apt-get install -y bzip2
    apt-get install -y man-db
    apt-get clean
    curl -sSL "https://julialang-s3.julialang.org/bin/linux/x64/1.0/julia-1.0.1-linux-x86_64.tar.gz" > julia.tgz
    tar -C / -zxf julia.tgz && rm -f julia.tgz
